{
  "compilerOptions": {
    "target": "es2016",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "declaration": false,
    "noImplicitAny": true,
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@components/*": ["src/components/*"],
    },
    "outDir": "dist"
  }
}